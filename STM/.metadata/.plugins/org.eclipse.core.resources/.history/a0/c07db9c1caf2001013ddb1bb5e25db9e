#include "main.h"
#include "usart.h"
#include "gpio.h"

uint8_t rx_byte;

int main(void)
{
  HAL_Init();
  SystemClock_Config();

  MX_GPIO_Init();
  MX_USART2_UART_Init();

  // Запускаємо прийом 1 байта по перериванню
  HAL_UART_Receive_IT(&huart2, &rx_byte, 1);

  while (1)
  {
  }
}
